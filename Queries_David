#Deliverable 2
a)
SELECT C.ClipTitle, P.RunningTime
FROM Clips C
NATURAL JOIN PlayedFor P
NATURAL JOIN Country C2
WHERE C2.CountryName = 'France'
AND P.RunningTime IS NOT NULL
ORDER BY P.RunningTime DESC
LIMIT 10

b)
SELECT COUNT(DISTINCT R.ClipId)
FROM ReleasedIn R
WHERE R.ReleaseDate LIKE '2001'
GROUP BY R.CountryId

c)
SELECT COUNT(DISTINCT R.ClipId)
FROM Classified C
NATURAL JOIN ReleasedIn R
NATURAL JOIN Country C2
WHERE C2.CountryName = 'USA'
AND (	R.ReleaseDate LIKE '2014'
	OR R.ReleaseDate LIKE '2015' 
	OR R.ReleaseDate LIKE '2016'
	OR R.ReleaseDate LIKE '2017'
	OR R.ReleaseDate LIKE '2018')
GROUP BY C.GenreId

d)
SELECT S.FullName
FROM MovieStaff S
NATURAL JOIN Acts A
GROUP BY S.StaffId
ORDER BY COUNT(DISTINCT A.ClipId) DESC
LIMIT 1

e)
SELECT COUNT(DISTINCT D.ClipId)
FROM Directs D
GROUP BY D.StaffId
ORDER BY COUNT(DISTINCT D.ClipId) DESC
LIMIT 1

f)
WITH Helper AS 
(
  SELECT Produces.StaffId
  FROM Produces, Directs 
  WHERE (Produces.StaffId = Directs.StaffId AND Produces.ClipId = Directs.ClipId)
)
  
SELECT DISTINCT S.FullName
FROM MovieStaff S
INNER JOIN Helper H
ON S.StaffId = H.StaffId

g)
SELECT L.Language
FROM Speaks S
NATURAL JOIN Languages L
GROUP BY L.LanguageId
ORDER BY COUNT(DISTINCT S.ClipId) DESC
LIMIT 10

h)
SELECT S.FullName
FROM Acts A
NATURAL JOIN MovieStaff S
NATURAL JOIN Clips C
WHERE C.ClipType = 'V'
GROUP BY S.StaffId
ORDER BY COUNT(DISTINCT A.ClipId) DESC
LIMIT 1

#Deliverable 3
g)
SELECT S.FullName
FROM MovieStaff S
WHERE S.StaffId IN(
	SELECT W.StaffId
	FROM Writes W, Produces P
	WHERE W.WorkType = "screenplay"
	AND(	SELECT COUNT(DISTINCT P.ClipId)
		FROM Produces P
		WHERE W.ClipId = P.ClipId
	) > 2
)

h)
SELECT AVG(Rank)
FROM Ratings
NATURAL JOIN Acts
WHERE OrdersCredit <= 3
GROUP BY StaffId

i)
SELECT AVG(R.Rank)
FROM Ratings R
WHERE R.ClipId IN(
	SELECT C.ClipId
	FROM Classified C
	WHERE C.GenreId IN(
		SELECT G.GenreId
		FROM Genres G
		GROUP BY G.GenreId	
		ORDER BY COUNT(*) DESC
		LIMIT 1
	)
)

j)
SELECT S.FullName
FROM MovieStaff S
WHERE S.StaffId IN(
	SELECT A.StaffId
	FROM Acts A
	GROUP BY A.StaffId
	HAVING COUNT(DISTINCT A.ClipId) > 100
	AND (SELECT COUNT(DISTINCT A.ClipId)*0.6)  < 	(SELECT COUNT(DISTINCT A.ClipId)
						WHERE A.ClipId IN(
							SELECT C.ClipId
							FROM Classified C
							WHERE C.GenreId IN(
								SELECT G.GenreId
								FROM Genres G
								WHERE G.Genre = 'Short'
							)
							AND C.GenreId NOT IN(
								SELECT G.GenreId
								FROM Genres G
								WHERE G.Genre = 'Comedy' OR G.Genre = 'Drama'
							)
						)) 
	AND (SELECT COUNT(DISTINCT A.ClipId)
		WHERE A.ClipId IN(
			SELECT C2.ClipId
			FROM Classified C2
			WHERE C2.GenreId IN(
				SELECT G2.GenreId
				FROM Genres G2
				WHERE G2.Genre = 'Drama'
			)
		)
	)*2 < (SELECT COUNT(DISTINCT A.ClipId)
		WHERE A.ClipId IN(
			SELECT C3.ClipId
			FROM Classified C3
			WHERE C3.GenreId IN(
				SELECT G3.GenreId
				FROM Genres G3
				WHERE G3.Genre = 'Comedy'
			)
		)
))

k)
SELECT COUNT(DISTINCT C.ClipId)
FROM Clips C
WHERE C.ClipId IN(
	SELECT C2.ClipId
	FROM Classified C2
	WHERE C2.GenreId IN(
		SELECT G.GenreId
		FROM Genres G
		GROUP BY G.GenreId
		ORDER BY COUNT(*) DESC
		LIMIT 1 OFFSET 1 
	)
	AND C2.ClipId IN(
		SELECT S.ClipId
		FROM Speaks S
		WHERE S.LanguageId IN(
			SELECT L.LanguageId
			FROM Languages L
			WHERE L.Language = 'Dutch'
		)
	)
)

l)
SELECT M.FullName
FROM MovieStaff M
WHERE M.StaffId IN(
	SELECT P2.StaffId
	FROM Produces P2
	WHERE P2.ClipId IN(
		SELECT C.ClipId
		FROM Classified C
		WHERE C.GenreId IN(
			SELECT C2.GenreId
			FROM Classified C2
			GROUP BY C2.GenreId
			ORDER BY COUNT(*) DESC
			LIMIT 1
		)
	) AND P2.Role='coordinating producer'
	GROUP BY P2.StaffId
	ORDER BY COUNT(*) DESC
	LIMIT 1
)
